
@{
    Layout = null;
}
@model RegisterViewModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Assets/css/Main.css">
    <title>Register</title>
</head>
<body id="login-body" style="background-image: url('/Assets/Images/bg-bottom-right.png');">


    <main>

        <section class="d-flex ">
            <div class="meeting-img col-md-6" style="background-image: url('/Assets/Images/meeting.png');">
            </div>
            <div class="col-lg-6 container d-flex ">
                <div class="register-form ms-lg-5 m-auto ">
                    <div class="login-form-context border border-dark bg-light  rounded-5 p-3">
                        <img src="~/Assets/Images/logo/logo.png" alt="" class="m-auto d-block mb-3">
                        <h2 class="text-center title pt-3">Register</h2>
                        <form asp-action="register" asp-controller="account" method="post"me id="login-form" class="mt-3 row">

                            <div class="my-1">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" type="email" placeholder="" class="form-control rounded-pill ">
                                <span class="fs-09 text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="col-lg-6">
                                <div class="my-1">
                                    <label asp-for="Fullname" class="form-label">Fullname</label>
                                    <input asp-for="Fullname" type="text" placeholder="" class="form-control rounded-pill ">
                                <span class="fs-09 text-danger" asp-validation-for="Fullname"></span>

                                </div>
                               
                               
                            </div>

                            <div class="col-lg-6">
                                <div class="my-1">
                                    <label asp-for="PhoneNumber" class="form-label">Phone</label>
                                    <input asp-for="PhoneNumber" type="text" placeholder="" class="form-control rounded-pill ">
                                <span class="fs-09 text-danger" asp-validation-for="PhoneNumber"></span>

                                </div>

                            </div>
                            <div class="my-1">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input asp-for="Username" type="text" placeholder="" class="form-control rounded-pill ">
                                <span class="fs-09 text-danger" asp-validation-for="Username"></span>

                            </div>
                            <div class="my-1">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <input asp-for="Password" type="password" placeholder="" class="form-control rounded-pill ">
                                <span class="fs-09 text-danger" asp-validation-for="Password"></span>

                                </div>
                                <div class="my-1">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                    <input asp-for="ConfirmPassword" type="password" placeholder="" class="form-control rounded-pill ">
                                <span class="fs-09 text-danger" asp-validation-for="ConfirmPassword"></span>

                                </div>

                            
                           

                        </form>

                        <div asp-validation-summary="ModelOnly" class="text-danger fs-09"></div>
                        <div class="text-center mt-3 pt-1">
                            <button class=" submit-btn m-auto" type="submit" form="login-form">Register</button>
                        </div>
                        <a asp-action="login" asp-controller="account" class="text-decoration-none link-base my-2 text-center d-block">Already have an account? <span class="h6 link-hover-base">Log In</span> </a>


                    </div>
                </div>
            </div>

        </section>
    </main>



    <!-- ========================= CDNs =============================== -->
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/f0bcda735f.js"
            crossorigin="anonymous"></script>
</body>
</html>