
@{
    Layout = null;
}

@model LoginViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Assets/css/Main.css">
    <title>Log in</title>
</head>
<body id="login-body" style="background-image: url('/Assets/Images/bg-bottom-right.png');">
 

    <main>
        
        <section class="d-flex ">
            <div class="meeting-img col-md-6" style="background-image: url('/Assets/Images/meeting.png');">
            </div>
            <div class="col-lg-6 container d-flex ">
                 <div class="login-form ms-lg-5 m-auto  ">
                <div class="login-form-context border border-dark bg-light  rounded-5 p-4">
                    <img src="~/Assets/Images/logo/logo.png" alt="" class="m-auto d-block mb-3">
                    <h2 class="text-center title pt-3">Log in</h2>
                    <form asp-action="login" asp-controller="account" method="post" id="login-form" class="mt-4">
                        <div class="my-2">
                            <label for="" class="form-label">Username</label>
                            <input asp-for="Username" type="text" placeholder="" class="form-control rounded-pill ">
                                <span class=" fs-09 d-block text-danger" asp-validation-for="Username"></span>

                            </div>
                        <div class="my-2">
                            <label for="" class="form-label">Password</label>
                            <input asp-for="Password" type="password" placeholder="" class="form-control rounded-pill "> 
                           <span class="fs-09 d-block text-danger" asp-validation-for="Password"></span>
                            <a href="#" class="text-decoration-none link-base"> <small>Forgot password?</small></a>  
                        </div>
                        
                        <div class="">
                            <input type="checkbox" asp-for="RememberMe"  checked class="form-check-inline" id="rememberme">
                                <label for="rememberme">Remember me</label>
                        </div>
                            <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                    </form>
                    <div asp-validation-summary="ModelOnly" class="fs-09 text-danger"></div>
                    
                    <div class="text-center mt-2 ">
                        <button class=" submit-btn m-auto" type="submit" form="login-form">Log In</button>
                    </div>
                        @if (ViewBag.VerificationLink != null)
                        {
                            <a class="text-center d-block" asp-action="resendMail" asp-controller="account" asp-route-to="@ViewBag.Email" asp-route-subject="Email Verification" asp-route-message="<a href'@ViewBag.VerificationLink'></a> here to verify your Account">Resend Link</a>
                        }
                        <a asp-action="register" asp-controller="account" class="text-decoration-none link-base my-2 text-center d-block">Don't have an account? <span class="h6 link-hover-base">Register</span> </a>
                    <p class="text-center my-2 or "> OR</p>

                    <div class="social  ">
                        <a asp-action="googleLogin" asp-controller="account" class="link-base text-decoration-none  d-block my-2 rounded-3 p-2"> <i class="fa-brands fa-google mx-3 me-4"></i> <span> Sign In With Google</span></a>
                       <a href="" class="link-base text-decoration-none  d-block my-2 rounded-3 p-2"> <i class="fa-brands fa-facebook-f mx-3 me-4"></i><span>Sign In WIth Facebook</span></a>
                       
                    </div>
                </div>
            </div>
            </div>
           
        </section>
    </main>



    <!-- ========================= CDNs =============================== -->


        <!-- Font Awesome -->
        <script
        src="https://kit.fontawesome.com/f0bcda735f.js"
        crossorigin="anonymous"
      ></script>
</body>
</html>