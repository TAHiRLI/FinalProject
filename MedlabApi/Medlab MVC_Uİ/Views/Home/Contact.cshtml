@model ContactViewModel

<!-- Bread crumb -->
<div class="breadCrumb p-3 bg-light">
    <p class="container mb-0 px-5">
        <a asp-action="index" asp-controller="home">Home</a>/<a href="#">Contacts</a>
    </p>
</div>

<main>
    <section id="Contact-info_Section" class="">
        <iframe src="https://maps.google.com/maps?q=@Model.Setting["latitude"],@Model.Setting["longitude"]&hl=es;z=14&amp;output=embed"
                width="100%"
                height="400"
                style="border: 0"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"></iframe>
        <div class="container px-5 py-5">
            <div class="row">
                <div class="col-lg-4  p-4 mt-2">
                    <h5 class="title_underlined h3 mb-5">Clinic Location</h5>
                    <div class="d-flex">
                        <div class="">
                            <i class="fa-solid fa-location-dot text-base"></i>
                        </div>
                        <p class="col ps-3">
                          @Model.Setting["location"]
                        </p>
                    </div>
                </div>
                <div class="col-lg-4  p-4 mt-2">
                    <h5 class="title_underlined h3 mb-5">Contact Info</h5>
                    <div class="d-flex">
                        <div class="">
                            <i class="fa-solid fa-phone text-base"></i>
                        </div>
                        <div class="col ps-3">
                            Phone: <span class="text-base">  @Model.Setting["phone"]</span>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div class="">
                            <i class="fa-solid fa-envelope text-base"></i>
                        </div>
                        <div class="col ps-3">
                            @Model.Setting["email"]
                        </div>
                    </div>
                </div>
                <div class="col-lg-4  p-4 mt-2">
                    <h5 class="title_underlined h3 mb-5">Working Time</h5>
                    <div class="d-flex">
                        <div class="pe-3">
                            <i class="fa-solid fa-clock text-base"></i>
                        </div>
                        <div class="col">
                            <div class="d-flex justify-content-between w-100">
                                <span>Mon-Thu</span>
                                <span class="text-base">   @Model.Setting["mon-thu"]</span>
                            </div>
                            <div class="d-flex justify-content-between w-100">
                                <span>Friday</span>
                                <span class="text-base">   @Model.Setting["friday"]</span>
                            </div>
                            <div class="d-flex justify-content-between w-100">
                                <span>Saturday</span>
                                <span class="text-base">   @Model.Setting["saturday"]</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="Contact-form_Section" class="py-5 ">
        <div class="container">
            <div class="row">
                <div class="col-lg-5 pe-lg-5">
                    <div class="sectionTitle">
                        <h2 class="h1 position-relative  text-dark title_underlined"
                            data-title="Specialists">
                            Get In Touch With Us
                        </h2>
                    </div>

                    <p class="mt-5 mb-3">For general questions, please send us a message and we’ll get right back to you. You can also call us directly to speak with a member of our service team or insurance expert.</p>
                    <h5 class="my-4">Stay Connected</h5>

                    <div class="links d-flex">
                        <a href="@Model.Setting["gmail"]" class="links_link d-flex align-items-center justify-content-center bg-light mx-1 link-base text-decoration-none">
                            <i class="fa-brands fa-google"></i>
                        </a>
                        <a href="@Model.Setting["instagram"]" class="links_link d-flex align-items-center justify-content-center bg-light mx-1 link-base text-decoration-none">
                            <i class="fa-brands fa-instagram"></i>
                        </a>
                        <a href="@Model.Setting["facebook"]" class="links_link d-flex align-items-center justify-content-center bg-light mx-1 link-base text-decoration-none">
                            <i class="fa-brands fa-facebook"></i>
                        </a>
                        <a href="@Model.Setting["twitter"]" class="links_link d-flex align-items-center justify-content-center bg-light mx-1 link-base text-decoration-none">
                            <i class="fa-brands fa-twitter"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-7">
                  @await Html.PartialAsync("_ContactMessageFormPartial", Model.ContactMesssageVm)
                </div>
            </div>
        </div>
    </section>
</main>

