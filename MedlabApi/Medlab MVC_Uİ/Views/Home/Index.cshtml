@{
    ViewData["Title"] = "Home Page";

    @model HomeViewModel
}

<main>
    
    <!-- Main Slider -->
    <section id="MainSlider_Section" class="">
        <div class="mainSlider position-relative">
            @foreach (var slide in Model.Sliders)
            {
                
            <!-- slide  -->
            <div class="mainSlider_item d-flex justify-content-center">
                <div class="holder">
                    <img src="~/Assets/Uploads/Sliders/@slide.ImageUrl"
                         alt=""
                         class="mainSlider_item_image" />
                </div>
                <div class="mainSlider_item_content d-flex flex-column align-items-center justify-content-center position-absolute">
                    <p class="mainSlider_item_content_title p-0">
                        @slide.Title
                    </p>
                    <p class="mainSlider_item_content_desc">
                       @slide.Desc
                    </p>
                    <a href="@slide.BtnUrl"
                       class="mainSlider_item_content_button rounded-pill my-custom-btn p-0 py-2 px-3 mt-lg-5 px-lg-4 py-lg-3">
                       @slide.BtnText <i class="las la-arrow-right"></i>
                    </a>
                </div>
            </div>
            }
          
   

            <!-- End -->
        </div>
    </section>
    <!-- About us  -->
    <section id="AboutUs_Section" class=" bg-light ">
        <div class="container-md container-fluid py-5">


            <div class="aboutUs row  justify-content-center align-items-center my-5 ">
                <div class="aboutUs_values col-lg-6 row  justify-content-center"
                     style="background-image: url('../../wwwroot/Assets/Images/bg-department.png')">
                     @foreach (var value in Model.Values)
                    {
                        <!-- Value -->
                        <div class="col-6 p-0 px-2 py-2">
                            <div class="aboutUs_values_item p-2 p-md-3 p-lg-4 px-lg-5 d-flex flex-column align-items-start">
                                <i class="valueIcon @value.Icon mb-3"></i>
                                <p class="valueName position-relative">@value.Name</p>
                            </div>
                        </div>
                    }

                    <!-- End -->
                </div>
                <div class="aboutUs_info col-lg-6 mt-lg-0 mt-3">
                    <span class="aboutUs_info_sectionName sectionName">About Us</span>
                    <p class="aboutUs_info_title">
                       @Model.Setting["home_aboutUs_title"]
                    </p>
                    <div class="aboutUs_info_desc">
                        @Model.Setting["home_aboutUs_desc1"]
                        <br />
                        <br />
                        @Html.Raw(Model.Setting["home_aboutUs_desc2"]) 

                    </div>

                    <a href=" @Model.Setting["home_aboutUs_btnUrl"]" class="aboutUs_info_button rounded-pill col-5">@Model.Setting["home_aboutUs_btnText"]</a>
                </div>
            </div>
        </div>
    </section>
    <!-- Services -->
    <section id="Tests_Section" class="py-5 ">
        <div class="container-md container-fluid">
            <div class="sectionTitle tests mb-5">
                <h2 class="h1 position-relative text-center double-title text-dark title_underlined"
                    data-title="General Tests">
                    General Diagnostic Tests
                </h2>
            </div>

            <div class="tests position-relative">
                <!-- Slider Nav -->
                <div class="mt-4 px-lg-5">
                    <div class="tests_slider tests_sliderNav">
                        @foreach (var service in Model.Services)
                        {
                            <!-- Item -->
                            <div class="tests_slider_item border-gray mx-2 d-block text-decoration-none">
                                <div class="tests_slider_item_icon my-2">
                                    <i class="@service.Icon"></i>
                                </div>
                                <span class="tests_slider_item_title d-block mt-3">@service.Name</span>
                            </div>
                        }
                  
                        <!--End-->
                    </div>
                </div>

                <!-- Slider Display -->
                <div class="tests_sliderFor ">

                    @foreach (var service in Model.Services)
                    {
                        <!-- Slide Item  -->
                        <div>
                            <div class="row tests_content px-lg-5 mt-4"
                             style="
                    background-image: url('../../wwwroot/Assets/Images/bg-department.png');
                  ">
                                <div class="tests_content_image col-lg-6">
                                    <div class="tests_content_image_holder">
                                        <img src="~/Assets/Uploads/Services/@service.ImageUrl"
                                         alt="@service.Name"
                                         class="w-100 h-100" />
                                    </div>
                                </div>
                                <div class="tests_content_info bg-light col-lg-6 mt-lg-0 mt-3">
                                    <h2 class="tests_content_info_title h3">
                                        @service.Name
                                    </h2>

                                    <p class="tests_content_info_desc">
                                        @Html.Raw(service.DetailedDesc)
                                 </p>
                                    <a href="#" class="tests_content_info_button rounded-pill">Order Test</a>
                                </div>
                            </div>
                        </div>
                    }
              

                    <!-- END -->
                </div>
            </div>
        </div>
    </section>
    <!-- Featured Doctors -->
    <section id="Doctors_Section" class="py-5 ">
        <span class="sectionName text-center d-block mb-5">Perfect Team</span>
        <div class="sectionTitle">
            <h2 class="h1 position-relative text-center double-title text-dark title_underlined"
                data-title="Professional ">
                A Professional & Care Provider
            </h2>
        </div>

        <div class="doctor_search col-8 col-sm-6 col-md-4 col-lg-3 d-none">
            <div class="input-group my-5 ">
                <input type="text"
                       class="form-control "
                       placeholder="Search For Specialist"
                       aria-label="Recipient's username"
                       aria-describedby="button-addon2" />
                <button class="btn fas fa-search bg-light"></button>
            </div>
        </div>

        <div class="doctors mt-5 pt-3">
            <div class="container">
                <div class="doctorSlider d-flex px-lg-5">

                    @foreach (var doctor in Model.Doctors)
                    {
                        <!-- slide -->
                        <div class="doctor_box mx-3  bg-light pb-3">
                            <div class="doctor_box_photo position-relative">
                                <a asp-action="details" asp-controller="doctor" asp-route-id="@doctor.Id" class="d-block w-100 h-100">
                                    <img src="~/Assets/Uploads/Doctors/@doctor.ImageUrl" alt="@doctor.Fullname" />
                                </a>
                                <div class="doctor_box_photo_links bg-light position-absolute">
                                    <div class="p-2 text-center">
                                        <a href="@doctor.Facebook" class="text-decoration-none text-base">
                                            <i class="fa-brands fa-facebook-f"></i>
                                        </a>
                                    </div>
                                    <div class="p-2 text-center">
                                        <a href="@doctor.Instagram" class="text-decoration-none text-base">
                                            <i class="fa-brands fa-instagram"></i>
                                        </a>
                                    </div>
                                    <div class="p-2 text-center">
                                        <a href="@doctor.Twitter" class="text-decoration-none text-base">
                                            <i class="fa-brands fa-twitter"></i>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="doctor_box_footer">
                                <h5 class="doctor_box_footer_name text-center my-3">
                                    <a asp-action="details" asp-controller="doctor" asp-route-id="@doctor.Id">@doctor.Fullname</a>
                                </h5>
                                <div class="doctor_box_footer_position text-center">
                                   @doctor.Positon
                                </div>
                            </div>
                        </div>
                    }
                    <!-- END -->
                </div>
            </div>
        </div>
    </section>
    <!-- Blogs And News -->
    <section id="Blogs_Section" class="py-5 bg-light ">
        <div class="container px-lg-4">
            <div class="row">
                <div class="col-lg-5 blogs d-flex flex-column">
                    <div class="sectionTitle blogs_title mb-5">
                        <h2 class="h1 position-relative double-title text-dark"
                            data-title="Blogs">
                            Blogs and news
                        </h2>
                    </div>

                    <ul class="">
                        @foreach (var blog in Model.RecentBlogs)
                        {
                            <!-- blog -->
                            <li class="blogs_item my-2 row">
                                <div class="blogs_item_photo">
                                    <img src="~/Assets/Uploads/Blogs/@blog.ImageUrl" alt="@blog.Title" />
                                </div>
                                <div class="blogs_item col pe-5">
                                    <span class="blogs_item_info_date">Mar 12 2020</span>
                                    <p class="blogs_item_info_title">
                                        <a asp-action="details" asp-controller="blog" asp-route-id="@blog.Id" class="text-decoration-none">
                                           @blog.Title
                                        </a>
                                    </p>
                                </div>
                            </li>
                        }

                        <!-- END -->
                    </ul>
                    <div></div>
                </div>
                <div class="col-lg-7 col-12 achievements position-relative">


                    <div class="sectionTitle achievements_title mb-5">
                        <h2 class="h1 position-relative text-center text-dark title_underlined">
                            Our <span class="text-base"> Achievements </span>
                        </h2>
                    </div>

                    <div class="achievements_photo">
                        <img src="~/Assets/Images/banner-right.jpg" alt="" class="w-100" />
                    </div>


                    <div class="achievements_counter bg-base text-light d-flex p-3">
                        <div class="achievements_counter_1 col-4 text-center">
                            <p class="achievements_counter_number mb-0">
                                <span class="counter "> @Model.AppointmentCount</span> <sup class="">K</sup>
                            </p>
                            <p class="achievements_counter_title mb-0 text-center">Online Meeting</p>
                        </div>

                        <div class="achievements_counter_2 col-4 text-center">
                            <p class="achievements_counter_number mb-0">
                                <span class="counter "> @Model.DoctorCount</span> <sup class="">+</sup>
                            </p>
                            <p class="achievements_counter_title mb-0 text-center">Permanent Staff</p>
                        </div>

                        <div class="achievements_counter_3 col-4 text-center">
                            <p class="achievements_counter_number mb-0">
                                <span class="counter "> @Model.ServiceCount</span> <sup class="">+</sup>
                            </p>
                            <p class="achievements_counter_title mb-0 text-center">Services</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Appointment  -->
    <section id="Appointment_Section" class="p-5 ">
        <div class="container px-lg-5">
            <div class="appointment row">
                <div class="appointment_form col-lg-6">
                    <div class="sectionTitle mt-5">
                        <h2 class="h1 position-relative text-center text-dark double-title"
                            data-title="Contact">
                            Get In Touch  <span class="text-base">With Us</span>
                        </h2>
                    </div>

                    <p class="text-center">
                        We believe in providing the best possible care to all our
                        existing patients and welcome new patients to sample.
                    </p>
                  @await Html.PartialAsync("_ContactMessageFormPartial", Model.ContactMesssageVm)
                </div>
                <div class="appointment_photo col-lg-6 d-lg-block d-none">
                    <img src="~/Assets/Images/banner-appointment.png" alt="" />
                </div>
            </div>
        </div>
    </section>
</main>



@section Scripts{
           <!-- ========================= CDNs =============================== -->


        <!-- Jquery -->
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <!-- Slick Slide -->
        <script type="text/javascript"
            src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

        <!-- Counter cdn-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/waypoints/4.0.1/jquery.waypoints.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/counterup2/2.0.2/index.js"></script>

        <!-- ========================= Custom =============================== -->

        <!-- Slick Settings -->
        <script type="module" src="~/Assets/Js/slider.js"></script>
 
        <!-- Counter -->
        <script src="~/Assets/Js/counter.js"></script>
}