@using Medlab_MVC_Uİ.Services

@model AboutUsViewModel


@inject LayoutService _layoutService

@{
    Dictionary<string, string> setting = _layoutService.GetSetting();
}





@section Styles{

    <!-- Slick -->
    <link rel="stylesheet"
      type="text/css"
      href="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />

    <!-- <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    /> -->
}


    <!-- Bread crumb -->
    <div class="breadCrumb p-3 bg-light">
        <p class="container mb-0 px-5">
            <a asp-action="index" asp-controller="home">Home</a>/<a asp-action="aboutus" asp-controller="home">About Us</a>
        </p>
    </div>

    <main>
        <!-- Clinic secti -->
        <section id="OurClinic_Section" class=" bg-light">
            <div class="container py-5 px-lg-5">
                <span class="sectionName text-center d-block mb-4">Our dentists working to your smile</span>
                <div class="sectionTitle mb-5">
                    <h2 class="h1 position-relative text-center double-title text-dark title_underlined"
                    data-title="About Us">
                        About Our Clinic
                    </h2>
                </div>

                <div class="clinic  row mt-lg-5">
                    <div class="col-lg-6 clinic_photos text-center px-4">
                        <img src="/Assets/Images/about-01.jpg" alt="" class="w-100" />
                        <div class="row mt-3 justify-content-center">
                            <div class="col-6">
                                <img src="/Assets/Images/about-03.jpg" alt="" class="w-100" />
                            </div>
                            <div class="col-6">
                                <img src="/Assets/Images/about-04.jpg" alt="" class="w-100" />
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 clinic_info px-4">
                        <p class="clinic_info_desc mt-4 mt-lg-0">
                            @Html.Raw(setting["aboutUs_desc1"])
                            @Html.Raw(setting["aboutUs_desc2"])
                            @Html.Raw(setting["aboutUs_desc3"])

                    </div>
                </div>
            </div>


        </section>
        <!-- Values section -->
        <section id="Values_Section" class="py-5 bg-light ">
            <div class="container px-5">
                <span class="sectionName text-center d-block ">Motivation is easy</span>
                <div class="sectionTitle">
                    <h2 class="h1 position-relative text-center  text-dark title_underlined"
                    data-title="About Us">
                        Our Core Values
                    </h2>
                </div>

                <div class="values valuesSlider my-5 ">


                @foreach (var value in Model.Values)
                {
                    <!--Value-->
                    <div class="values_item text-center  p-3 col-4 mx-3  ">
                        <div class="my-3 text-base">  <i class="@value.Icon "></i></div>

                        <h4 class="text-base">@value.Name</h4>
                        <p>@value.Desc</p>
                    </div>
                }


                <!--End-->


            </div>
        </div>
    </section>
    <!-- Promo Section -->
    <section id="Promo_Section" class="">
        <div class=" promo bg-cover py-5 d-flex align-items-center justify-content-center" style="background-image: url('/Assets/Images/banner-center.jpg');">
            <div class="promo_content my-5 py-5 text-center">
                <p class="promo_content_title text-light mt-3">@setting["aboutUs_promo_title"]</p>
                <p class="promo_content_desc text-light">@setting["aboutUs_promo_desc"]</p>
                <a href="@setting["aboutUs_promo_btnUrl"]" class="promo_content_btn btn btn-outline-light rounded-pill mt-4">@setting["aboutUs_promo_btnText"]</a>
            </div>
        </div>
    </section>
    <!-- Our Office section -->
    <section id="OurOffice_Section" class="py-5 bg-light ">
        <div class="container px-lg-5 py-5 ">
            <div class=" row">
                <div class="col-lg-4">

                    <div class="sectionTitle mb-4">
                        <h2 class="h1 position-relative  text-dark title_underlined">
                            Our Office
                        </h2>
                    </div>

                    <p class="office_desc mt-3">
                        @Html.Raw(setting["aboutUs_office_desc"])

                    </p>
                </div>
                <div class="col-lg-8 bg-danger">

                    <div class="galery galerySliderFor position-relative">
                        <div class="galery_img  bg-warning">
                            <img src="/Assets/Images/slider-gallery-00.jpg" alt="" class="w-100">
                        </div>

                        <div class="galery_img  bg-danger">
                            <img src="/Assets/Images/slider-gallery-01.jpg" alt="" class="w-100">
                        </div>
                        <div class="galery_img  bg-warning">
                            <img src="/Assets/Images/slider-gallery-02.jpg" alt="" class="w-100">
                        </div>
                        <div class="galery_img  bg-warning">
                            <img src="/Assets/Images/slider-gallery-03.jpg" alt="" class="w-100">
                        </div>
                        <div class="galery_img  bg-warning">
                            <img src="/Assets/Images/slider-gallery-04.jpg" alt="" class="w-100">
                        </div>

                    </div>



                    <div class="position-relative">

                        <div class="galeryNav galerySliderNav mt-4 position-relative">
                            <div class="galeryNav_img col-3 mx-2">
                                <img src="/Assets/Images/slider-gallery-00.jpg" alt="" class="w-100">
                            </div>
                            <div class="galeryNav_img col-3 mx-2">
                                <img src="/Assets/Images/slider-gallery-02.jpg" alt="" class="w-100">
                            </div>
                            <div class="galeryNav_img col-3 mx-2">
                                <img src="/Assets/Images/slider-gallery-03.jpg" alt="" class="w-100">
                            </div>
                            <div class="galeryNav_img col-3 mx-2">
                                <img src="/Assets/Images/slider-gallery-04.jpg" alt="" class="w-100">
                            </div>
                            <div class="galeryNav_img col-3 mx-2">
                                <img src="/Assets/Images/slider-gallery-05.jpg" alt="" class="w-100">
                            </div>
                        </div>


                    </div>
                </div>
            </div>

        </div>
    </section>

</main>


@section Scripts{

    <!-- ========================= CDNs =============================== -->
    <!-- Jquery -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <!-- Slick Slide -->
    <script type="text/javascript"
        src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>


    <!-- ========================= Custom =============================== -->
    <!-- Slick Settings -->
    <script type="module" src="~/Assets/Js/slider.js"></script>

}