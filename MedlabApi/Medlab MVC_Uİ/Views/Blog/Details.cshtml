
@{
    ViewData["Title"] = "Details";
}
@model BlogDetailsViewModel


<!-- Bread crumb -->
<div class="breadCrumb p-3 bg-light">
    <p class="container mb-0 px-5">
        <a asp-action="index" asp-controller="home">Home</a>/<a asp-action="index" asp-controller="blog">Blogs</a>/<a href="#">Blogs-name</a>
    </p>
</div>

<main>
    <section id="All-Blogs_Section" class="py-5">
        <div class="sectionTitle">
            <h2 class="h1 position-relative text-center text-dark title_underlined mb-5">
                @Model.Blog.Title
            </h2>
        </div>
        <div class="container">
            <div class="row">
                <div class="blogs col-lg-9 px-md-3">
                    <!-- blog -->
                    <div class="blogs_item mb-5 border-gray p-3">
                        <div class="blogs_item_body_header row flex-nowrap ps-lg-4">
                            <div class="post-date col-2 d-flex flex-column align-items-center justify-content-center">
                                <span class="fs-3 day">17</span>
                                <span class="text-base">Jan</span>
                            </div>
                            <div class="post-title col-9">
                                <h2 class="h4">
                                    <span
                                       class="text-decoration-none link-base text-wrap">@Model.Blog.Title</span>
                                </h2>
                                <p class="my-2">
                                    by
                                    <a asp-action="details" asp-controller="doctor" asp-route-id="@Model.Blog?.Doctor?.Id" class="text-decoration-none link-hover-base">
                                        @Model.Blog?.Doctor?.Fullname
                                        </a>

                                    <a href="@Model.Blog?.Doctor?.Facebook" class="text-decoration-none link-base">
                                        <i class="mx-2 fa-brands fa-facebook-f"></i>
                                    </a>
                                    <a href="@Model.Blog?.Doctor?.Twitter" class="text-decoration-none link-base">
                                        <i class="mx-2 fa-brands fa-twitter"></i>
                                    </a>
                                    <a href="@Model.Blog?.Doctor?.Instagram" class="text-decoration-none link-base">
                                        <i class="mx-2 fa-brands fa-instagram"></i>
                                    </a>
                                </p>
                            </div>
                        </div>
                        <div class="blogs_item_photo w-100 my-4">
                            <a href=""
                               class="d-block overflow-hidden d-flex align-items-center justify-content-center w-100">
                                <img src="~/Assets/Uploads/Blogs/@Model.Blog.ImageUrl"
                                     alt="@Model.Blog.ImageUrl"
                                     class="d-block" />
                            </a>
                        </div>
                        <div class="blogs_item_body p-4">
                            <p class="blogs_item_body_dontent mt-4">
                               @Html.Raw(Model.Blog.Text)
                            </p>
                        </div>
                    </div>

                    <!-- end -->
                </div>

                <div class="col-lg-3 bg-light">
                    <div>
                        <p class="h3">Categories</p>
                        <ul class="mt-3">
                            @foreach (var category in Model.BlogCategories)
                            {
                                <!-- Category -->
                                <li class="mt-2">
                                    <a asp-action="index" asp-controller="blog" asp-route-BlogCategoryId="@category.Id" class="text-decoration-none   @(Model.Blog.BlogCategoryId == category.Id? "link-hover-base":"link-base")">
                                        <i class="fa-solid fa-check text-base mx-1"></i>
                                        @category.Name
                                    </a>
                                </li>
                            }
                            <!-- End -->

                           
                        </ul>
                    </div>

                    <!-- recent Blogs -->


                    <div class="mt-4">
                        <p class="h4">Recent Posts</p>

                        <ul class="recent-blogs container-fluid">

                            @foreach (var blog in Model.RecentBlogs)
                            {
                                <!-- recent Blog -->
                                <li class="recent-blogs_item my-2 row p-1">
                                    <div class="recent-blogs_item_photo col-2 p-0">
                                        <a asp-action="details" asp-controller="blog" asp-route-id="@blog.Id"
                                       class="w-100 h-100 d-block d-flex align-items-center justify-content-center">
                                            <img src="~/Assets/Uploads/Blogs/@blog.ImageUrl"
                                             alt="@blog.ImageUrl" />
                                        </a>
                                    </div>
                                    <div class="recent-blogs_item_info col-10">
                                        <h6>
                                            <a asp-action="details" asp-controller="blog" asp-route-id="@blog.Id" class="text-decoration-none link-base">
                                               @blog.Title
                                            </a>
                                        </h6>
                                        <p class="m-0 post-small-info">
                                            <i class="me-2 me-2 fas fa-clock text-base"></i>
                                            <span class="post-date">@blog.CreatedAt.ToString("dd MMM yyyy")</span>
                                        </p>
                                    </div>
                                </li>
                            }


                            <!-- End -->

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>


